<div>
  <div class='p-5'>
    <h1>{{name}}</h1>
    <h3>Price: {{price}}</h3>

    <button
      type='button'
      class='btn btn-primary'
    >Купити</button>
  </div>
  <strong><p>Description: {{description}}</p></strong>
  <b>Category: {{category}}</b>
  <hr />
  <hr />
  <div>
    {{#with features}}
      <h3>Processor</h3>
      {{#with processor}}
        Brand:
        {{brand}}
        <br />
        Model:
        {{model}}
        <br />
        Speed:
        {{speed}}
        <br />
        Cores:
        {{cores}}
        <br />
        Cache:
        {{cache}}
      {{/with}}
      <br />
      <hr />
      <h3>Memory</h3>
      {{#with memory}}
        Type:
        {{type}}
        <br />
        Size:
        {{size}}
        <br />
        Speed:
        {{speed}}
      {{/with}}
      <br />
      <hr />
      <h3>Storage</h3>
      {{#with storage}}
        Type:
        {{type}}
        <br />
        Size:
        {{size}}
      {{/with}}
      <br />
      <hr />
      <h3>Display</h3>
      {{#with display}}
        Size:
        {{size}}
        <br />
        Resolution:
        {{resolution}}
        <br />
        Technology:
        {{technology}}
        <br />
        Color space:
        {{color_space}}
        <br />
        Brightness:
        {{brightness}}
        <br />
        Refresh rate:
        {{refresh_rate}}
      {{/with}}
      <br />
      <hr />
      <h3>Graphics</h3>
      {{#with graphics}}
        Brand:
        {{brand}}
        <br />
        Model:
        {{model}}
        <br />
        Memory:
        {{memory}}
      {{/with}}
      <br />
      <hr />
      <h3>Ports</h3>
      {{#each ports}}
        Type:
        {{type}}
        <br />
        Count:
        {{count}}
        <br />
        {{#each features}}
          {{this}}
          <br />
        {{/each}}
        <br />
      {{/each}}
      <br />
      <hr />
      <h3>Battery</h3>
      {{#with battery}}
        Type:
        {{type}}
        <br />
        Capacity:
        {{capacity}}
        <br />
        Life:
        {{life}}
      {{/with}}
      <br />
      <hr />
      <h3>Dimensions</h3>
      Weight:
      {{weight}}
      <br />
      {{#with dimensions}}
        Height:
        {{height}}
        <br />
        Width:
        {{width}}
        <br />
        Depth:
        {{depth}}
      {{/with}}
      <br />
      <hr />
      <hr />
      <h3>In addition</h3>
      Operating System:
      {{operating_system}}
      <br />
      <br />
      <strong>Accessories</strong>
      <br />

      {{#each accessories}}
        Name:
        {{name}}
        <br />
        Price:
        {{price}}
        <br />
        <br />
      {{/each}}
    {{/with}}
  </div>
</div>